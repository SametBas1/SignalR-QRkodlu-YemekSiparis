@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title text-center text-info">QR Kod İşlemleri</h4>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form method="post" asp-action="Index" asp-controller="QRCode">
                            <div class="form-group">
                                <label for="value" class="font-weight-bold">QR Kod İçeriği</label>
                                <input type="text" name="value" id="value" class="form-control" placeholder="QR kodu için metin girin" required />
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-warning btn-lg btn-block">QR Kod Oluştur</button>
                            </div>
                        </form>

                        @if (ViewBag.QrCodeImage != null)
                        {
                            <div class="text-center mt-4">
                                <h5 class="font-weight-bold text-success">QR Kodu</h5>
                                <img src="@ViewBag.QrCodeImage" alt="QR Kod" style="width: 300px; height: 300px;" class="img-fluid rounded shadow" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some custom CSS -->
<style>
    .content {
        padding-top: 30px;
    }

    .card {
        border-radius: 10px;
    }

    .btn-warning {
        background-color: #ffb703;
        border: none;
        font-weight: bold;
    }

        .btn-warning:hover {
            background-color: #e68a00;
        }
</style>
